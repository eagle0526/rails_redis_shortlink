<h2 class="pl-10 pt-10">新增連結</h2>




<%= form_with model: @link, class: "p-10", data: {controller: "link-new"}  do |f| %>   

  <div class="m-2">
    <%= f.label :url %>
    <%= f.text_field :url, class: "w-full border-2 rounded", data: {link_new_target: "url",
                                                                    action: "input->link-new#inputUrl"} %><br>
  </div>
  
  <div class="m-2">
    <%= f.label :slug %>
    <%= f.text_field :slug, class: "w-1/2 border-2 rounded" %><br>
  </div>

  
  <div class="mt-10">
    <%= f.label :utm_campaign %>
    <%= f.text_field :utm_campaign, class: "w-1/2 border-2 rounded", data: {action: "input->link-new#inputUtmCampaign",
                                                                            link_new_target: "utmCampaign"} %><br>
  </div>
  <div class="mt-2">
    <%= f.label :utm_medium %>
    <%= f.text_field :utm_medium, class: "w-1/2 border-2 rounded", data: {action: "input->link-new#inputUtmMedium",
                                                                            link_new_target: "utmMedium"} %><br>
  </div>
  <div class="mt-2">
    <%= f.label :utm_source %>
    <%= f.text_field :utm_source, class: "w-1/2 border-2 rounded", data: {action: "input->link-new#inputUtmSource",
                                                                            link_new_target: "utmSource"} %><br>
  </div>
  <div class="mt-2">
    <%= f.label :utm_term %>
    <%= f.text_field :utm_term, class: "w-1/2 border-2 rounded", data: {action: "input->link-new#inputUtmTerm",
                                                                            link_new_target: "utmTerm"} %><br>
  </div>
  <div class="mt-2">
    <%= f.label :utm_content %>
    <%= f.text_field :utm_content, class: "w-1/2 border-2 rounded", data: {action: "input->link-new#inputUtmContent",
                                                                            link_new_target: "utmContent"} %><br>
  </div>

  

  <%= f.submit class: "bg-blue-500 px-6 py-2 rounded text-white mt-10" %>

<% end %>
